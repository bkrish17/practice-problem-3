
#include <iostream>
using namespace std;
int summaxconsecutive(int arr[],int n,int k)
{
    if(n<k)
    {
        cout<<"not valid";
        return -1;
    }
    int window_max=0;
    for(int i=0;i<k;i++)
    {
        window_max+=arr[i];
    }
    int max_sum=window_max;
    for(int i=k;i<n;i++)
    {
        window_max+=arr[i]-arr[i-k];
        max_sum=max(max_sum,window_max);
    }
    return max_sum;
}
int main()
{
    int arr[]={1,2,3,4,5,6,7,8,9};
    int k=4;
    int n=sizeof(arr)/sizeof(arr[0]);
    cout<<summaxconsecutive(arr,n,k);
    
}

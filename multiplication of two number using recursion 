#include <iostream>
using namespace std;
int product(int x,int y)
{
    if(y>x)
        return product(y,x);
    if(y==0)
        return 0;
    return x+product(x,y);   //x*y=x+(x*(y-1))
}
int main()
{
    int x,y;
    cout<<"enter x and y";
    cin>>x>>y;
    cout<<"product = "<<product(x,y)<<endl;
    return 0;
}

